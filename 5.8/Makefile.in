all: $(dirs) $(exe) $(exebin) $(podir)surcos_gui.pot $(podir)surcos.pot \
	$(localdir)$(es)surcos_gui.mo $(localdir)$(es)surcos.mo \
	$(localdir)$(fr)surcos_gui.mo $(localdir)$(fr)surcos.mo \
	$(localdir)$(it)surcos_gui.mo $(localdir)$(it)surcos.mo

$(objdir):
	test -d $(objdir) || mkdir -p $(objdir)

$(objbindir):
	test -d $(objbindir) || mkdir -p $(objbindir)

strip:
	@MAKE@
	strip $(exe) $(exebin) $(lib)

manuals: $(manuals)

## Our main object (GUI)
$(exepgo): $(objpgo) $(jb)
	$(CC) $(pgogen) $(objpgo) $(LDFLAGS) -o $(exepgo)
	$(prefix1) $(exepgo) examples/furrow1
	$(prefix2) $(exepgo) examples/furrows30x50
	$(llvm_merge)
$(exe): $(obj) $(jb)
	$(CC) $(pgouse) $(obj) $(LDFLAGS) -o $(exe)

## Our main object (no GUI)
$(exebinpgo): $(objbinpgo) $(libpgo)
	$(CC) $(pgogen) $(objbinpgo) $(LDFLAGSBIN) -lsurcospgo -o $(exebinpgo)
	$(prefix1bin) $(exebinpgo) examples/furrow1
	$(prefix2bin) $(exebinpgo) examples/furrows30x50
	$(llvm_mergebin)
$(exebin): $(objbin) $(lib)
	$(CC) $(pgouse) $(objbin) $(LDFLAGSBIN) -lsurcos -o $(exebin)

## The SURCOS library
$(libpgo): $(objlibpgo) $(jbbin)
	$(CC) $(pgogen) -shared $(objlibpgo) $(LDFLAGSBIN) -lsurcospgo -o $(libpgo)
$(lib): $(objlib) $(jbbin)
	$(CC) $(pgouse) -shared $(objlib) $(LDFLAGSBIN) -lsurcos -o $(lib)

